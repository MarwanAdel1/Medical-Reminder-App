<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.signup_screen.Registeration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.401"
    app:layout_constraintWidth_percent="0.75">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:fontFamily="cursive"
        android:text="@string/signup"
        android:textColor="@color/addMedicationBackgroundColorDark"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <EditText
        android:id="@+id/name_field"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/filed_border"
        android:fontFamily="cursive"
        android:gravity="center"
        android:hint="Enter Your name"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_title" />

    <EditText
        android:id="@+id/email_field"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/filed_border"
        android:fontFamily="cursive"
        android:gravity="center"
        android:hint="Enter Your Email"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@id/name_field"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/name_field"
        app:layout_constraintTop_toBottomOf="@id/name_field" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/filed_border"
        android:inputType="textPassword"
        android:fontFamily="cursive"
        android:gravity="center"
        android:hint="Enter Your Password"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/email_field"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_field"
        app:layout_constraintTop_toBottomOf="@id/email_field" />

    <EditText
        android:id="@+id/confirm_password_field"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/filed_border"
        android:fontFamily="cursive"
        android:inputType="textPassword"
        android:gravity="center"
        android:hint="Confirm Your Password"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/password_field"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/password_field"
        app:layout_constraintTop_toBottomOf="@id/password_field" />

    <EditText
        android:id="@+id/year_field"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/filed_border"
        android:fontFamily="cursive"
        android:gravity="center"
        android:hint="year"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/confirm_password_field"
        app:layout_constraintTop_toBottomOf="@id/confirm_password_field" />

    <Spinner
        android:id="@+id/month_field"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/filed_border"
        android:fontFamily="cursive"
        android:gravity="center"
        android:hint="month"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/year_field"
        app:layout_constraintTop_toBottomOf="@id/confirm_password_field" />

    <EditText
        android:id="@+id/day_field"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/filed_border"
        android:fontFamily="cursive"
        android:gravity="center"
        android:hint="Day"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@id/confirm_password_field"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/month_field"
        app:layout_constraintTop_toBottomOf="@id/confirm_password_field" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/addMedicationBackgroundColorDark"
        android:fontFamily="cursive"
        android:text="@string/signup"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/year_field" />

    <TextView
        android:id="@+id/Or_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:fontFamily="cursive"
        android:text="Already have an acount, "
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:fontFamily="cursive"
        android:text="@string/login"
        android:textColor="@color/addMedicationBackgroundColorDark"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/Or_login" />

</androidx.constraintlayout.widget.ConstraintLayout>