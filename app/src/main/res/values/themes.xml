<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedicalReminder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/addMedicationBackgroundColor</item>
    </style>

    <style name="bottomNavigationBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/addMedicationBackgroundColor</item>
        <item name="android:statusBarColor">@color/addMedicationBackgroundColor</item>
    </style>

    <style name="AddMedication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/addMedicationBackgroundColor</item>
    </style>


    <style name="FloatingHint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundColor">@color/white</item>
        <item name="backgroundTint">@color/addMedicationBackgroundColorDark</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>